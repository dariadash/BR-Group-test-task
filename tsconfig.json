{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "removeComments": true,
    "noImplicitAny": false,
    "strict": true,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./global"
    ],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}